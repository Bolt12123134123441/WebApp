doctype html
html
    head
        title All Messages
        style.
            body {
                font-family: 'Arial', sans-serif;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                margin: 0;
                background-color:#808080;
                
                color: #333;
            }

            h1 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 3rem;
                color: white;
                text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.5);
            }

            .message-container {
                width: 90%;
                max-width: 600px;
                margin-bottom: 20px;
                padding: 20px;
                background-color: rgba(255, 255, 255, 0.9);
                border-radius: 12px;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease;
                font-size: 1.2rem;
            }

            .message-container:hover {
                transform: scale(1.05);
            }

            .message-text {
                font-size: 18px;
                line-height: 1.6;
                color: #444;
                margin-bottom: 15px;
                text-align: justify;
            }

            .message-footer {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                color: #888;
                margin-top: 10px;
                font-weight: bold;
            }

            .message-footer .sender {
                color: #4a90e2;
                font-weight: bold;
            }

            .message-footer .date {
                font-style: italic;
                color: #a5a5a5;
            }

            a {
                display: inline-block;
                margin-top: 30px;
                padding: 15px 30px;
                background-color: #4a90e2;
                color: white;
                text-decoration: none;
                border-radius: 30px;
                font-size: 18px;
                text-align: center;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                transition: background-color 0.3s, transform 0.3s ease;
            }

            a:hover {
                background-color: #357ab7;
                transform: scale(1.05);
            }

            a:active {
                background-color: #285a8f;
            }

          

    body
        h1 All Messages

        each message in messages
            .message-container
                p.message-text= message.message
                .message-footer
                    p.sender Sender: #{message.sender ? message.sender.username : 'Anonym'}
                    p.date Date: #{message.date.toLocaleString('ru-RU')}

        a(href='/sendMessage') Write a message
        a(href='/auth/register') Relogin
        
